{
  "manifest_version": 3,
  "name": "TimeTracker",
  "version": "1.0.0",
  "description": "在指定网站右上角显示今日已使用时长（本地统计，无需登录）",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "images/icon_32.png",
    "48": "images/icon_64.png",
    "128": "images/icon_128.png"
  },
  "action": {
    "default_title": "TimeTracker"
  }
}
